{% extends "layout.html.twig" %}


{% block content %}

<div class="breadcrumbs">
    <a href="/">Homepage</a>&raquo;
</div>

<div class="product-details">
    
    <div>
        {% if bike.image %}
                <a href="/products/{{ bike.id }}"><img src="/images/{{ bike.image }}" alt=""></a>
        {% endif %}
    </div>
    <div>
        <h1>{{ bike.name }}</h1>
        <p>${{ bike.price }}</p>   
        <form method="post">
            {% if inBasket %}
                <button disabled> Added to a busket</button>
            {% else %}
                <button>Add to busket</button>
            {% endif %}
        </form>        
    </div>
</div>

{% if bike.description %}
    <p>{{ bike.description }}</p>
{% endif %}



{% endblock %}